                                            uploadMode: '@SharedLocalizer["or drag"]',
                                            multiple: false,
                                        }).dxValidator({
                                            validationRules: [{
                                                type: "required",
                                                message: '@SharedLocalizer["Upload  image"]'
                                            }]
                                        });
