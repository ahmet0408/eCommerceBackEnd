
@{
    ViewData["Title"] = SharedLocalizer["Orders"];
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @SharedLocalizer["Orders"] 
                <a id="reload" class="btn btn-primary text-white">
                    <i class="fa fas fa-bolt"></i>
                    Reload
                </a>
            </h1>
        </div>
    </div>

    <div class="row">
        <div id="gridContainer">
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            document.getElementById("reload").onclick = () => {
            window.location.reload();
            };
            let url = "/api/OrderApi/GetAllOrders";
            var returnUrl = '@Context.Request.Path@Context.Request.QueryString';
            $("#gridContainer").dxDataGrid({
                dataSource: DevExpress.data.AspNet.createStore({
                    key: "orderNumber",
                    loadUrl: url,
                    insertUrl: url,
                    updateUrl: url,
                    deleteUrl: url,
                    onBeforeSend: function (method, ajaxOptions) {
                        ajaxOptions.xhrFields = { withCredentials: true };
                    }
                }),
                onInitNewRow: function(e) {
                    var url = `@Url.Action("CreateCategory", "Product")`;
                    window.location = url;
                },
                filterPanel: {
                    visible: false
                },
                filterRow: { visible: false },
                remoteOperations: true,
                onRowUpdating: function (e) {
                    e.newData = Object.assign(e.oldData, e.newData)
                },
                //scrolling: {
                //    mode: "virtual",
                //    rowRenderingMode: "virtual"
                //},
                paging: {
                    pageSize: 30
                },
                editing: {
                    useIcons: true,
                    allowUpdating: true,
                    allowDeleting: true,
                    allowAdding: true
                },
                headerFilter: {
                    visible: true
                },
                wordWrapEnabled: true,
                showColumnLines: true,
                showRowLines: true,
                rowAlternationEnabled: true,
                showBorders: true,
                searchPanel: {
                    visible: true
                },
                stateStoring: {
                    enabled: true,
                    type: "localStorage",
                    storageKey: "OrderAdmin"
                },
                columns: [                    
                    {
                        caption: '@SharedLocalizer["O/N"]',
                        dataField: "orderNumber",
                        allowHeaderFiltering: false,
                        width: 50
                    },
                    {
                        caption: '@SharedLocalizer["First Name"]',
                        dataField: "firstName",
                        allowSorting: false,
                        allowHeaderFiltering: false
                    },
                    {
                        caption: '@SharedLocalizer["Last Name"]',
                        dataField: "lastName",
                        allowSorting: false,
                        allowHeaderFiltering: false
                    },
                    {
                        caption: '@SharedLocalizer["Phone Number"]',
                        dataField: "phoneNumber",
                        allowSorting: false,
                        allowHeaderFiltering: false
                    },
                    {
                        caption: '@SharedLocalizer["Address"]',
                        dataField: "address",
                        allowSorting: false,
                        allowHeaderFiltering: false
                    },
                    {
                        caption: '@SharedLocalizer["Order Status"]',
                        dataField: "orderStatus",
                        allowSorting: false,
                        allowHeaderFiltering: false
                    },
                    {
                        caption: '@SharedLocalizer["Zakaz edilen senesi"]',
                        dataField: "createdAt",
                        allowHeaderFiltering: false
                    },                    
                    {
                        type: "buttons",
                        width: 110,
                        buttons: [
                            {
                                hint: '@SharedLocalizer["Edit"]',
                                icon: "edit",
                                onClick: function (e) {
                                    var idString = e.row.data.id;
                                    var url = `@Url.Action("EditCategory", "Product")`;
                                    window.location = url + '?id=' + idString;
                                }
                            },
                            "delete"
                        ]
                    }
                ]
            });

        });
    </script>
}